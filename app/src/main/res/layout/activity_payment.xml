<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutA7"
    tools:context=".Payment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


        <TextView
            android:id="@+id/Ptxt"
            android:layout_width="268dp"
            android:layout_height="49dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="572dp"
            android:background="@drawable/textbox"

            android:paddingTop="5dp"
            android:text="Total Price"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/Otxt"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Ctxt"
            android:layout_width="268dp"
            android:layout_height="49dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="464dp"
            android:background="@drawable/textbox"
            android:paddingTop="5dp"
            android:text="Cash on Delivery"

            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/Ptxt" />

        <Button
            android:id="@+id/menuA7"
            android:layout_width="33dp"
            android:layout_height="32dp"

            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="357dp"
            android:layout_marginBottom="798dp"

            android:background="@drawable/menuicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="144dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="787dp"
            android:layout_weight="11"
            android:gravity="center"
            android:text="Payments"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toEndOf="@+id/menuA7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuA7"
            app:srcCompat="@drawable/ic_baseline_shopping_bag_24" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="568dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_baseline_wysiwyg_24" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="368dp"
            android:layout_height="192dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.673"
            app:srcCompat="@drawable/payment" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="49dp"
            android:layout_height="53dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="460dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_payment_24" />

        <TextView
            android:id="@+id/Otxt"
            android:layout_width="268dp"
            android:layout_height="49dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="684dp"
            android:background="@drawable/textbox"

            android:paddingTop="5dp"
            android:text="OrderID"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.16" />

        <Button
            android:id="@+id/send"
            android:layout_width="315dp"
            android:layout_height="73dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/pay"
            android:text="confirm Order"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewA7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>